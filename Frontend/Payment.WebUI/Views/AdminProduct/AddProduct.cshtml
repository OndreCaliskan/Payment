@model CreateProductDto
@{
    ViewData["Title"] = "AddProduct";
    Layout = "~/Views/AdminLayout/_AdminLayout.cshtml";
    var categories = ViewBag.Categories as IEnumerable<dynamic>;
}
<form method="post" enctype="multipart/form-data" asp-action="AddProduct">

    <label>Ürün İsmi</label>
    <input type="text" asp-for="Title" class="form-control" />
    <br />
    <div class="form-group">
        <label for="CategoryId">Kategori</label>
        <select id="CategoryId" name="CategoryId" class="form-control">
            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
    </div>
    <label>Açıklama</label>
    <input type="text" asp-for="Description" class="form-control" />
    <br />
    <label>Fiyat</label>
    <input type="number" asp-for="Price" class="form-control" />
    <br />
    <label>İndirim Oranı</label>
    <input type="number" asp-for="DiscountRate" class="form-control" />
    <br />
    <label>Stok Sayısı</label>
    <input type="text" asp-for="Stock" class="form-control" />
    <br />
    <label>Resim</label>
    <input type="file" id="file" name="File" accept=".jpg,.jpeg,.png" />
    <br />
    <label for="isActive">Aktif Mi?</label><br>
    <input type="radio" id="isActiveYes" name="isActive" value="true">
    <label for="isActiveYes">Evet</label><br>
    <input type="radio" id="isActiveNo" name="isActive" value="false">
    <label for="isActiveNo">Hayır</label>
    <br />
    <label>Oluşturan Kullanıcı</label>
    <input type="text" asp-for="CreateUser" class="form-control" />
    <br />
    <button class="btn btn-primary">Ürünü Ekle</button>
</form>


